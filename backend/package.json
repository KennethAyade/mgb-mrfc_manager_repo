    "multer": "^2.0.0",
    "pdf-parse": "^2.4.5",
    "pdf-poppler": "^0.2.3",
    "pdf.js-extract": "^0.2.1",
    "pdf2pic": "^3.2.0",
    "pdfjs-dist": "^4.9.155",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.1",
    "sharp": "^0.34.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tesseract.js": "^6.0.1",
    "typescript": "^5.3.3"
