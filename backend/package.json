{
  "name": "mgb-mrfc-backend",
  "version": "1.0.0",
  "description": "MGB MRFC Manager Backend API - Government MRFC compliance tracking system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "node scripts/migrate.js",
    "db:verify": "node scripts/verify-schema.js",
    "db:seed": "node scripts/seed-quarters.js",
    "db:seed:quarters": "node scripts/seed-quarters.js",
    "db:reset": "ts-node scripts/reset-database.ts",
    "db:check-password": "ts-node scripts/check-password.ts",
    "db:clear-compliance": "ts-node src/scripts/clear-compliance-cache.ts",
    "test:pdf": "ts-node src/scripts/test-pdf-extraction.ts",
    "test:ocr": "ts-node src/scripts/test-ocr.ts",
    "download:lang": "ts-node src/scripts/download-lang-data.ts",
    "db:migrate:ocr": "ts-node src/scripts/run-ocr-migration.ts"
  },
  "keywords": [
    "mrfc",
    "mining",
    "compliance",
    "denr",
    "mgb",
    "government"
  ],
  "author": "MGB IT Development Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@aws-sdk/client-s3": "^3.927.0",
    "@aws-sdk/s3-request-presigner": "^3.927.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
