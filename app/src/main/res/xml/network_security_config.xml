<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: Allow all HTTPS by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow cleartext (HTTP) traffic for local development -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- For Android Emulator localhost -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- For localhost on any port -->
        <domain includeSubdomains="true">localhost</domain>
        <!-- For local network IPs (192.168.x.x) -->
        <domain includeSubdomains="true">192.168.0.1</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
    </domain-config>

    <!-- AWS S3 for image/document storage -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">s3.us-west-2.amazonaws.com</domain>
        <domain includeSubdomains="true">s3.amazonaws.com</domain>
        <domain includeSubdomains="true">amazonaws.com</domain>
    </domain-config>

    <!-- Production backend -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">mgb-mrfc-manager-repo.onrender.com</domain>
    </domain-config>
</network-security-config>
