<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-compat"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarStyle">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:titleTextColor="@color/text_on_primary"
            app:navigationIconTint="@color/text_on_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_normal">

            <!-- Document Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDocumentInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ModernCard"
                android:layout_marginBottom="@dimen/spacing_normal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:id="@+id/tvDocumentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CMVR-3Q-Dingras-Walter-E..."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvAnalysisStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Analysis Status: Completed"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                    <!-- Download PDF Button with help text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ To view the PDF document, download it first"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/spacing_normal" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDownloadPdf"
                        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download PDF"
                        app:icon="@drawable/ic_download"
                        app:iconGravity="start"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Compliance Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardComplianceSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ModernCard"
                android:layout_marginBottom="@dimen/spacing_normal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Compliance Summary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <!-- Compliance Percentage -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="@dimen/spacing_normal"
                        android:background="@drawable/bg_rounded_border"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvCompliancePercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="78%"
                                android:textSize="48sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary" />

                            <TextView
                                android:id="@+id/tvComplianceRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Partially Compliant"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Compliance Details -->
                    <TextView
                        android:id="@+id/tvComplianceDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="24 out of 31 requirements met"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <!-- Progress Breakdown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_small">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvCompliantCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Compliant"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvNonCompliantCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#F44336" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Non-Compliant"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvNACount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="N/A"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Compliance Sections Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardComplianceSections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ModernCard"
                android:layout_marginBottom="@dimen/spacing_normal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Compliance by Section"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvComplianceSections"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="5"
                        tools:listitem="@layout/item_compliance_section" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Non-Compliant Items Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNonCompliantItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ModernCard"
                android:layout_marginBottom="@dimen/spacing_normal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Non-Compliant Items"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvNonCompliantItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_non_compliant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Admin Adjustment Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAdminAdjustment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ModernCard"
                android:layout_marginBottom="@dimen/spacing_normal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Admin Adjustments"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <!-- Manual Percentage Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilManualPercentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Override Percentage (0-100)"
                        style="@style/TextInputStyle"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etManualPercentage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Manual Rating Spinner -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilManualRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Override Rating"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerManualRating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Admin Notes -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAdminNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Admin Notes"
                        style="@style/TextInputStyle"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAdminNotes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:gravity="top|start" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnResetAdjustments"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height"
                            android:text="Reset"
                            android:textColor="@color/text_primary"
                            app:cornerRadius="8dp"
                            android:layout_marginEnd="@dimen/spacing_small" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveAdjustments"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height"
                            android:text="Save Changes"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@color/primary"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
