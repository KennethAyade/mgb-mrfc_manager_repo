<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Title and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Other Matter Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <!-- Highlight Status Badge -->
            <TextView
                android:id="@+id/tvHighlightStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discussed"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_rounded_green" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of the other matter"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <!-- Added By -->
        <TextView
            android:id="@+id/tvAddedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Added by: John Doe"
            android:textSize="13sp"
            android:textColor="@color/text_hint"
            android:layout_marginBottom="16dp" />

        <!-- Admin Actions -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleHighlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as Discussed"
            android:textColor="@color/white"
            app:backgroundTint="@color/status_success"
            app:icon="@drawable/ic_check"
            app:iconTint="@color/white"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/primary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
