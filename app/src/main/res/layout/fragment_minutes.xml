<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/surface"
        android:elevation="2dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEdit"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Edit"
            android:textColor="@color/primary"
            app:strokeColor="@color/primary"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_edit"
            app:iconTint="@color/primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Save"
            android:visibility="gone"
            app:backgroundTint="@color/primary"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_check" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApprove"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Approve"
            android:visibility="gone"
            app:backgroundTint="@color/status_success"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_check" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Read-only Minutes Display -->
            <TextView
                android:id="@+id/tvMinutesContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:background="@color/surface"
                android:visibility="visible" />

            <!-- Editable Minutes -->
            <EditText
                android:id="@+id/etMinutesSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:gravity="top|start"
                android:hint="Enter meeting minutes summary..."
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="16dp"
                android:background="@color/surface"
                android:inputType="textMultiLine"
                android:visibility="gone" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No minutes available yet."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
