<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Item Number -->
        <TextView
            android:id="@+id/tvItemNumber"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_circle_orange"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Item Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <!-- Item Title -->
            <TextView
                android:id="@+id/tvItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other Matter Title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <!-- Item Description -->
            <TextView
                android:id="@+id/tvItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description of the other matter"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:visibility="visible"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Highlight Indicator (checkmark for discussed items) -->
        <ImageView
            android:id="@+id/ivHighlightIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:contentDescription="Discussed"
            android:visibility="gone" />

        <!-- Admin Toggle Highlight Button -->
        <ImageButton
            android:id="@+id/btnToggleHighlight"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_highlight"
            android:contentDescription="Toggle Highlight"
            android:visibility="gone"
            app:tint="@color/text_secondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
